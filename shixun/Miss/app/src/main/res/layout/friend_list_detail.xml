                android:textSize="50dp"
                android:textColor="#ffffff"
                android:layout_centerVertical="true"
                android:background="@null"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人物详情"
                android:layout_centerInParent="true"
                android:textColor="#FFFFFF"
                android:textSize="22sp"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#1f2437">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_detailPhoto"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/second"/>
                <TextView
                    android:id="@+id/tv_detailName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="郑开基"
                    android:textColor="#fff"
                    android:layout_below="@id/iv_detailPhoto"
                    android:layout_marginTop="15dp"
                    android:layout_centerHorizontal="true"
                    android:textSize="23sp"/>
                <TextView
                    android:id="@+id/tv_detailTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1942 - 1995"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/tv_detailName"/>
                <LinearLayout
                    android:id="@+id/detail_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    android:layout_below="@id/tv_detailTime"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:id="@+id/tv_oldPhoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="旧相册"
                        android:textSize="18sp"
                        android:textColor="#fff"/>
                    <TextView
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="#fff"
                        android:layout_marginLeft="50dp"/>
                    <TextView
                        android:id="@+id/tv_recall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="回忆录"
                        android:textColor="#fff"
                        android:textSize="18sp"
                        android:layout_marginLeft="50dp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_short"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:text="“怀念...........优秀，卓越”"
                    android:textSize="15sp"
                    android:layout_below="@id/detail_a"
                    android:textColor="#fff"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="20dp"
                android:background="#36394a"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="生平"
                    android:textSize="18sp"
                    android:textColor="#fff"/>
                <TextView
