<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1f2437"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_huaiback"
            android:text="‹"
            android:textSize="50dp"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:background="@null"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="怀念"
            android:layout_centerInParent="true"
            android:textColor="#FFFFFF"
            android:textSize="22sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/et_addrecall"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:hint="添加你的怀念..."
            android:textColorHint="#8c909c"
            android:textSize="15sp"
            android:gravity="start"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:textColor="#fff"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/editext_style"
            android:layout_height="180dp" />
        <Button
            android:id="@+id/btn_ok"
            android:layout_below="@+id/et_addrecall"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="确 认"
            android:textSize="18sp"
            android:textColor="#fff"
            android:layout_marginTop="30dp"
            android:background="@drawable/addrecall_button_style"
            android:layout_height="50dp" />
    </RelativeLayout>
</LinearLayout>